// Variables de entorno para BaruLogix
# Base de datos MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/barulogix?retryWrites=true&w=majority

# JWT Secret para autenticación
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Configuración de email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=sibaru.business@gmail.com
EMAIL_PASS=your-app-password-here

# PlacetoPay (Gateway de pago principal)
PLACETOPAY_LOGIN=your-placetopay-login
PLACETOPAY_TRANKEY=your-placetopay-trankey
PLACETOPAY_URL=https://checkout-test.placetopay.com
PLACETOPAY_RETURN_URL=http://localhost:3000/payment/return

# Wompi (Gateway de pago secundario)
WOMPI_PUBLIC_KEY=pub_test_your-wompi-public-key
WOMPI_PRIVATE_KEY=prv_test_your-wompi-private-key
WOMPI_URL=https://sandbox.wompi.co

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Configuración de la aplicación
APP_NAME=BaruLogix
APP_URL=http://localhost:3000
SUBSCRIPTION_PRICE_COP=50000
SUBSCRIPTION_PRICE_USD=12

# Configuración de archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Configuración de logs
LOG_LEVEL=info

